@* @page "/admin2"
@using System.ComponentModel.DataAnnotations

<div class="admin-page">
    <!-- Navigation -->
    <!-- Removed navbar as user has their own -->
    <!-- Main Content -->
    <div class="admin-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Admin Dashboard</h1>
            <p class="page-subtitle">Manage tournament matches and settings</p>
        </div>

        <!-- Tournament Status Cards -->
        <div class="status-cards">
            <div class="status-card">
                <div class="status-card-content">
                    <div class="status-value">@teams.Count</div>
                    <div class="status-label">Registered Teams</div>
                    @if (CanStartTournament)
                    {
                        <div class="status-badge status-badge-ready">Ready to Start</div>
                    }
                    else
                    {
                        <div class="status-badge status-badge-warning">Need @(8 - teams.Count) more</div>
                    }
                </div>
            </div>

            <div class="status-card">
                <div class="status-card-content">
                    <div class="status-value status-value-blue">@PendingMatches</div>
                    <div class="status-label">Pending Matches</div>
                </div>
            </div>

            <div class="status-card">
                <div class="status-card-content">
                    <div class="status-value status-value-emerald">@CompletedMatches</div>
                    <div class="status-label">Completed Matches</div>
                </div>
            </div>

            <div class="status-card">
                <div class="status-card-content">
                    <div class="status-value status-value-amber">@matches.Count</div>
                    <div class="status-label">Total Matches</div>
                </div>
            </div>
        </div>

        <!-- Tournament Actions -->
        <div class="section-card">
            <h2 class="section-title">Tournament Actions</h2>
            <div class="action-buttons">
                <button class="btn-restart" @onclick="@(() => showRestartModal = true)">
                    Restart Tournament
                </button>
                <button class="btn-start" disabled="@(!CanStartTournament)">
                    @(CanStartTournament ? "Start Tournament" : "Need 8 Teams to Start")
                </button>
            </div>
        </div>

        <!-- Registered Teams -->
        <div class="section-card">
            <h2 class="section-title">Registered Teams</h2>
            <div class="teams-grid">
                @foreach (var team in TeamsRegistred)
                {
                    <div class="team-item">
                        <div class="team-info">
                            <img src="@team.Country?.FlagUrl"
                                 style="width:24px; height:16px; border-radius:3px; object-fit:cover;" />
                            <div class="team-code">@team.Country.Code</div>
                            <div class="team-code">@team.Country.Name</div>
                            
                        </div>
                        <div class="team-rating">@team.AverageRating.ToString("F1")</div>
                    </div>
                }
            </div>
        </div>

        <!-- Match Management -->
        <div class="section-card">
            <h2 class="section-title">Match Management</h2>

            <!-- Quarter Finals -->
            <div class="match-round">
                <div class="round-title">QUARTER FINALS</div>
                <div class="match-list">
                    @foreach (var match in matches.Where(m => m.Round == "Quarter Final"))
                    {
                        <div class="match-card">
                            <div class="match-teams">
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code">@match.Code1</div>
                                        <div class="match-team-name">@match.Team1</div>
                                    </div>
                                    <div class="match-score">@(match.Score1?.ToString() ?? "-")</div>
                                </div>
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code">@match.Code2</div>
                                        <div class="match-team-name">@match.Team2</div>
                                    </div>
                                    <div class="match-score">@(match.Score2?.ToString() ?? "-")</div>
                                </div>
                            </div>

                            <div class="match-footer">
                                <div class="match-status @GetStatusClass(match.Status)">@match.Status</div>

                                @if (match.Status == MatchStatus.COMPLETED && !string.IsNullOrEmpty(match.Type))
                                {
                                    <div class="match-type">@match.Type</div>
                                }

                                @if (match.Status == MatchStatus.PENDING)
                                {
                                    <div class="match-buttons">
                                        <button class="btn-play" @onclick="@(() => HandlePlayMatch(match))">
                                            Play
                                        </button>
                                        <button class="btn-simulate" @onclick="@(() => HandleSimulateMatch(match))">
                                            Simulate
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Semi Finals -->
            <div class="match-round">
                <div class="round-title">SEMI FINALS</div>
                <div class="match-list">
                    @foreach (var match in matches.Where(m => m.Round == "Semi Final"))
                    {
                        <div class="match-card">
                            <div class="match-teams">
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code @(match.Team1 == "TBD" ? "tbd" : "")">@match.Code1</div>
                                        <div class="match-team-name @(match.Team1 == "TBD" ? "tbd" : "")">@match.Team1</div>
                                    </div>
                                    <div class="match-score">@(match.Score1?.ToString() ?? "-")</div>
                                </div>
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code @(match.Team2 == "TBD" ? "tbd" : "")">@match.Code2</div>
                                        <div class="match-team-name @(match.Team2 == "TBD" ? "tbd" : "")">@match.Team2</div>
                                    </div>
                                    <div class="match-score">@(match.Score2?.ToString() ?? "-")</div>
                                </div>
                            </div>

                            <div class="match-footer">
                                <div class="match-status @GetStatusClass(match.Status)">@match.Status</div>

                                @if (match.Status == MatchStatus.PENDING && match.Team1 != "TBD" && match.Team2 != "TBD")
                                {
                                    <div class="match-buttons">
                                        <button class="btn-play" @onclick="@(() => HandlePlayMatch(match))">
                                            Play
                                        </button>
                                        <button class="btn-simulate" @onclick="@(() => HandleSimulateMatch(match))">
                                            Simulate
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Final -->
            <div class="match-round">
                <div class="round-title">FINAL</div>
                <div class="match-list">
                    @foreach (var match in matches.Where(m => m.Round == "Final"))
                    {
                        <div class="match-card">
                            <div class="match-teams">
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code @(match.Team1 == "TBD" ? "tbd" : "")">@match.Code1</div>
                                        <div class="match-team-name @(match.Team1 == "TBD" ? "tbd" : "")">@match.Team1</div>
                                    </div>
                                    <div class="match-score">@(match.Score1?.ToString() ?? "-")</div>
                                </div>
                                <div class="match-team-row">
                                    <div class="match-team-info">
                                        <div class="match-team-code @(match.Team2 == "TBD" ? "tbd" : "")">@match.Code2</div>
                                        <div class="match-team-name @(match.Team2 == "TBD" ? "tbd" : "")">@match.Team2</div>
                                    </div>
                                    <div class="match-score">@(match.Score2?.ToString() ?? "-")</div>
                                </div>
                            </div>

                            <div class="match-footer">
                                <div class="match-status @GetStatusClass(match.Status)">@match.Status</div>

                                @if (match.Status == MatchStatus.PENDING && match.Team1 != "TBD" && match.Team2 != "TBD")
                                {
                                    <div class="match-buttons">
                                        <button class="btn-play" @onclick="@(() => HandlePlayMatch(match))">
                                            Play
                                        </button>
                                        <button class="btn-simulate" @onclick="@(() => HandleSimulateMatch(match))">
                                            Simulate
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Restart Tournament Dialog -->
    @if (showRestartModal)
    {
        <div class="modal-overlay" @onclick="@(() => showRestartModal = false)">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h3 class="modal-title">Restart Tournament?</h3>
                <p class="modal-text">
                    This will reset all matches and start the tournament from Quarter Finals. This action cannot be undone.
                </p>
                <div class="modal-actions">
                    <button class="btn-cancel" @onclick="@(() => showRestartModal = false)">Cancel</button>
                    <button class="btn-confirm-danger" @onclick="HandleRestartTournament">Restart</button>
                </div>
            </div>
        </div>
    }

    <!-- Match Action Dialog -->
    @if (showMatchModal && selectedMatch != null)
    {
        <div class="modal-overlay" @onclick="@(() => { showMatchModal = false; selectedMatch = null; })">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h3 class="modal-title">
                    @(matchType == MatchType.PLAY ? "Play Match" : "Simulate Match")
                </h3>

                <div class="modal-match-info">
                    <div class="modal-team">
                        <div class="match-team-code">@selectedMatch.Code1</div>
                        <div class="match-team-name">@selectedMatch.Team1</div>
                    </div>
                    <div class="modal-vs">vs</div>
                    <div class="modal-team">
                        <div class="match-team-code">@selectedMatch.Code2</div>
                        <div class="match-team-name">@selectedMatch.Team2</div>
                    </div>
                </div>

                <p class="modal-text">
                    @(matchType == MatchType.PLAY
                        ? "This will generate AI commentary with key moments until a winner emerges. Federations will be notified by email."
                        : "This will instantly generate the final scoreline and goal scorers. Federations will be notified by email.")
                </p>

                <div class="modal-actions">
                    <button class="btn-cancel" @onclick="@(() => { showMatchModal = false; selectedMatch = null; })">Cancel</button>
                    <button class="@(matchType == MatchType.PLAY ? "btn-confirm-play" : "btn-confirm-simulate")" @onclick="HandleConfirmMatch">Confirm</button>
                </div>
            </div>
        </div>
    }
</div>

