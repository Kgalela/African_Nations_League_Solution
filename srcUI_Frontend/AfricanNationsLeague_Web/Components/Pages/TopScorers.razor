@page "/top-scorers"

<style>
  

    :root {
        --primary-bg: #020617;
        /* Updated to match image - very dark background */
        --bracket-container-bg: #1e293b;
        /* Added lighter slate background for outer bracket container */
        --card-bg: #0f172a;
        /* Darker navy for match cards to create contrast */
        --card-border: #334155;
        /* Lighter border for better visibility */
        --text-primary: #ffffff;
        --text-secondary: #94a3b8;
        --accent-green: #10b981;
        --accent-blue: #3b82f6;
        --completed-bg: rgba(16, 185, 129, 0.1);
        --pending-bg: rgba(59, 130, 246, 0.1);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: "Inter", sans-serif;
        background: var(--primary-bg);
        /* Using very dark background */
        color: var(--text-primary);
       
    }

    .tournament-container {
        padding: 3rem 1rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Unified bracket container with single background */
    .unified-bracket-container {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 2.5rem;
    }

    /* Updated to use CSS Grid with 3 columns and 2 rows for proper trophy centering */
    .bracket-grid {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        grid-template-rows: auto auto;
        gap: 2rem;
        grid-template-areas:
            "quarter-left center quarter-right"
            "semi-left center-spacer semi-right";
    }

    .quarter-left {
        grid-area: quarter-left;
    }

    .bracket-center {
        grid-area: center;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 2rem;
        grid-row: 1 / 3; 
    }

    .quarter-right {
        grid-area: quarter-right;
    }

    .semi-left {
        grid-area: semi-left;
        padding-top: 2rem;
        border-top: 1px solid rgba(51, 65, 85, 0.3);
    }

    .bracket-center-spacer {
        grid-area: center-spacer;
        min-width: 200px;
    }

    .semi-right {
        grid-area: semi-right;
        padding-top: 2rem;
        border-top: 1px solid rgba(51, 65, 85, 0.3);
    }

    /* Removed old bracket-row styles as we're now using grid areas */

    .bracket-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .section-title {
        color: var(--text-secondary);
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
    }

    .matches-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .match-card {
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 1rem;
        position: relative;
        transition: all 0.3s ease;
    }

        .match-card:hover {
            border-color: rgba(59, 130, 246, 0.4);
            transform: translateY(-2px);
        }

        .match-card.completed {
            border-color: rgba(16, 185, 129, 0.3);
        }

    .team-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
    }

        .team-row:first-child {
            padding-top: 0;
        }

        .team-row:last-of-type {
            padding-bottom: 0;
            border-bottom: none;
        }

        .team-row:not(:last-of-type) {
            border-bottom: 1px solid rgba(30, 42, 71, 0.5);
        }

    .team-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .country-code {
        background: rgba(59, 130, 246, 0.15);
        color: var(--text-primary);
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        min-width: 2.5rem;
        text-align: center;
    }

        .country-code.unknown {
            background: rgba(139, 146, 168, 0.15);
            color: var(--text-secondary);
        }

    .team-name {
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--text-primary);
    }

    .score {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--accent-green);
        min-width: 2rem;
        text-align: right;
    }

    .match-card.pending .score {
        color: var(--text-secondary);
    }

    .match-status {
        position: absolute;
        bottom: 0.75rem;
        left: 1rem;
        font-size: 0.65rem;
        font-weight: 600;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        letter-spacing: 0.05em;
    }

    .completed-badge {
        background: var(--completed-bg);
        color: var(--accent-green);
    }

    .pending-badge {
        background: var(--pending-bg);
        color: var(--accent-blue);
    }

    .trophy-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }

    .trophy-icon {
        font-size: 4rem;
        filter: drop-shadow(0 4px 12px rgba(245, 158, 11, 0.4));
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .final-text {
        color: var(--accent-green);
        font-weight: 700;
        letter-spacing: 0.1em;
        margin: 0;
    }

    .tbd-text {
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .bracket-grid

    {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        gap: 2rem;
        grid-template-areas:
            "center"
            "quarter-left"
            "quarter-right"
            "semi-left"
            "semi-right";
    }

    .bracket-center {
        grid-row: auto;
        padding: 2rem 0;
    }

    .bracket-center-spacer {
        display: none;
    }

    .semi-left,
    .semi-right {
        border-top: none;
        padding-top: 0;
    }

    }

    /* Adding top scorers section styles to match the design image */
    .top-scorers-container {
        padding: 3rem 1rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .top-scorers-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .top-scorers-title {
        color: var(--accent-green);
        font-weight: 700;
        font-size: 2rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        margin: 0;
    }

    .top-scorers-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
    }

        .top-scorers-grid .scorer-card:nth-child(n + 5) {
            grid-column: span 2;
        }

    .scorer-card {
        background: #2d3748;
        border: 1px solid rgba(51, 65, 85, 0.5);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
        transition: all 0.3s ease;
    }

        .scorer-card:hover {
            transform: translateY(-4px);
            border-color: rgba(16, 185, 129, 0.4);
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.15);
        }

    .scorer-rank {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--accent-green);
        line-height: 1;
        min-width: 3rem;
    }

    .scorer-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .scorer-name {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-primary);
        line-height: 1.2;
    }

    .scorer-country {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

        .scorer-country .country-code {
            background: rgba(59, 130, 246, 0.15);
            color: var(--text-primary);
            padding: 0.125rem 0.375rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }

    .scorer-goals {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .scorer-goals .goals-count {
            font-size: 2rem;
            font-weight: 700;
            color: #f59e0b;
            line-height: 1;
        }

        .scorer-goals .goal-icon {
            font-size: 1.25rem;
            filter: drop-shadow(0 2px 4px rgba(245, 158, 11, 0.3));
        }

    @@media (max-width: 1200px) {
        .top-scorers-grid

    {
        grid-template-columns: repeat(2, 1fr);
    }

    .top-scorers-grid .scorer-card:nth-child(n + 5) {
        grid-column: span 1;
    }

    }

    @@media (max-width: 768px) {
        .top-scorers-grid

    {
        grid-template-columns: 1fr;
    }

    .top-scorers-title {
        font-size: 1.5rem;
    }

    .top-scorers-grid .scorer-card:nth-child(n + 5) {
        grid-column: span 1;
    }

    }

    /* MudBlazor Overrides */
    .mud-appbar {
        background: var(--card-bg) !important;
        border-bottom: 1px solid var(--card-border);
    }

    .mud-theme-dark {
        --mud-palette-background: #0a0e1a;
        --mud-palette-surface: #141b2d;
    }


</style>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-8">
    <div class="top-scorers-header">
        <h1 class="top-scorers-title">TOP SCORERS</h1>
    </div>

    <!-- Updated grid layout to match image with 4 cards in first row, 2 in second row -->
    <div class="top-scorers-grid">
        @foreach (var scorer in topScorers)
        {
            <div class="scorer-card">
                <div class="scorer-rank">@scorer.Rank</div>
                <div class="scorer-info">
                    <div class="scorer-name">@scorer.PlayerName</div>
                    <div class="scorer-country">
                        <span class="country-code">@scorer.CountryCode</span>
                        <span>@scorer.CountryName</span>
                    </div>
                </div>
                <div class="scorer-goals">
                    <span class="goals-count">@scorer.Goals</span>
                    <span class="goal-icon">⚽</span>
                </div>
            </div>
        }
    </div>
</MudContainer>

