@page "/register"
@using MudBlazor

<MudPaper Class="register-container" Elevation="4" Style="padding:2rem; max-width:400px; margin:auto; margin-top:50px; background-color:#1E1E2F; color:white;">
    <MudText Typo="Typo.h5" Class="mb-2" Bold="true">REGISTER YOUR TEAM</MudText>
    <MudText Typo="Typo.subtitle2" Class="mb-4">Join the African Nations League</MudText>

    <EditForm Model="@_registerModel" OnValidSubmit="RegisterTeam">
        <MudTextField @bind-Value="_registerModel.FederationRep" Label="Federation Representative" Variant="Variant.Filled" FullWidth="true" Class="mb-3" />

        <MudTextField @bind-Value="_registerModel.Email" Label="Email" Variant="Variant.Filled" FullWidth="true" Class="mb-3" />

        <MudSelect @bind-Value="_registerModel.Country" Label="Country" Variant="Variant.Filled" FullWidth="true" Class="mb-3">
            
            <!-- Add more countries as needed -->
        </MudSelect>

        <MudTextField @bind-Value="_registerModel.ManagerName" Label="Manager Name" Variant="Variant.Filled" FullWidth="true" Class="mb-3" />

        <MudTextField @bind-Value="_registerModel.Password" Label="Password" Variant="Variant.Filled" InputType="InputType.Password" FullWidth="true" Class="mb-4" />

        <MudButton Variant="Variant.Filled" Color="Color.Success" FullWidth="true" Type="Submit">Register Team</MudButton>
    </EditForm>

    <MudText Typo="Typo.body2" Align="Align.Center" Class="mt-2">
        Already have an account? <MudLink Href="/login" Color="Color.Info">Login here</MudLink>
    </MudText>
</MudPaper>

@code {
    private RegisterModel _registerModel = new RegisterModel();

    private void RegisterTeam()
    {
        // Handle registration logic here
        Console.WriteLine($"Registering {_registerModel.FederationRep}'s team from {_registerModel.Country}");
    }

    public class RegisterModel
    {
        public string FederationRep { get; set; }
        public string Email { get; set; }
        public string Country { get; set; } = "South Africa";
        public string ManagerName { get; set; }
        public string Password { get; set; }
    }
}
