

                        @page "/match/{MatchId}"



<PageTitle>Match Details - African Nations League</PageTitle>

<div class="match-detail-page">
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">

        @if (isLoading)
        {
            <div class="text-center my-8">
                <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
                <MudText Typo="Typo.subtitle1" Class="mt-4">Loading match details...</MudText>
            </div>
        }
        else if (notFound)
        {
            <MudAlert Severity="Severity.Error" Class="my-4">
                Match not found or unavailable.
            </MudAlert>
        }
        else if (match != null)
        {
            <!-- Match Header -->
            <MudCard Class="match-header-card mb-6">
                <MudCardContent>
                    <div class="match-header">
                        <div class="match-stage mb-4">
                            <MudChip T="string" Color="Color.Info" Size="Size.Large">@match.Stage</MudChip>
                        </div>

                        <div class="match-teams-display d-flex justify-center align-center mb-4">
                            <div class="team-section text-center">
                               
                                <img src="@match.HomeCountry?.FlagUrl"
                                     alt="@match.HomeCountry?.Name"
                                     style="width: 24px; height: 16px; border-radius: 2px;" />
                                <MudText Typo="Typo.h4" Class="team-name-large">@match.HomeCountry?.Name</MudText>
                            </div>

                            <div class="score-section mx-8 text-center">
                                <MudText Typo="Typo.h2" Class="score-large">@match.HomeScore</MudText>
                                <MudText Typo="Typo.h5" Class="score-separator">-</MudText>
                                <MudText Typo="Typo.h2" Class="score-large">@match.AwayScore</MudText>
                            </div>

                            <div class="team-section text-center">
                                
                                <img src="@match.AwayCountry?.FlagUrl"
                                     alt="@match.AwayCountry?.Name"
                                     style="width: 24px; height: 16px; border-radius: 2px;" />
                                <MudText Typo="Typo.h4" Class="team-name-large">@match.AwayCountry?.Name</MudText>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <MudChip T="string" Color="Color.Primary" Icon="@Icons.Material.Filled.FastForward">
                                Simulated Match
                            </MudChip>
                        </div>
                    </div>
                </MudCardContent>
            </MudCard>

            @if (match.IsPlayed)
            {
                <!-- Play-by-Play Commentary -->
                <MudCard Class="commentary-card">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5">
                                <MudIcon Icon="@Icons.Material.Filled.Article" Class="mr-2" Style="color:white" />
                                Match Commentary
                            </MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        @if (match.Commentary != null && match.Commentary.Any())
                        {
                            <MudTimeline TimelineOrientation="TimelineOrientation.Vertical" TimelinePosition="TimelinePosition.Start">
                                @foreach (var comment in match.Commentary)
                                {
                                    <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                                        <ItemOpposite>
                                            <MudText Typo="Typo.body2" Class="commentary-time" Style="color:white">@comment.Minute'</MudText>
                                        </ItemOpposite>
                                        <ItemContent>
                                            <MudCard Class="commentary-item">
                                                <MudCardContent>
                                                    @if (comment.Text == "Goal")
                                                    {
                                                        <div class="goal-commentary">
                                                            <MudIcon Icon="@Icons.Material.Filled.SportsSoccer" Color="Color.Success" Class="mr-2" />
                                                            <strong>GOAL!</strong>
                                                        </div>
                                                    }
                                                    <MudText Typo="Typo.body1" Style="color:white">@comment.Text</MudText>
                                                    @if (!string.IsNullOrEmpty(comment.Text))
                                                    {
                                                        <MudText Typo="Typo.body2" Class="text-slate-400 mt-1" Style="color:white">
                                                            Scorer: <strong>@comment.Minute</strong>
                                                        </MudText>
                                                    }
                                                </MudCardContent>
                                            </MudCard>
                                        </ItemContent>
                                    </MudTimelineItem>
                                }
                            </MudTimeline>
                        }
                        else
                        {
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Style="color:white">No commentary available for this match.</MudText>
                        }
                    </MudCardContent>
                </MudCard>
            }
            else
            {
                <!-- Simulated Match Summary -->
                <MudCard Class="simulated-summary-card">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5">
                                <MudIcon Icon="@Icons.Material.Filled.Summarize" Class="mr-2" />
                                Match Summary
                            </MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudAlert Severity="Severity.Info" Class="mb-4">
                            This match was simulated. Only final results are available.
                        </MudAlert>

                        <MudGrid>
                            <MudItem xs="12" md="6">
                                <MudCard Class="goal-scorers-card">
                                    <MudCardHeader>
                                        <CardHeaderContent>
                                            <MudText Typo="Typo.h6">Goal Scorers</MudText>
                                        </CardHeaderContent>
                                    </MudCardHeader>
                                    <MudCardContent>
                                        @if (match.HomeGoals != null && match.HomeGoals.Any())
                                        {
                                            <MudList T="string">
                                                @foreach (var goal in match.HomeGoals)
                                                {
                                                    <MudListItem>
                                                        <div class="scorer-item">
                                                            <MudIcon Icon="@Icons.Material.Filled.SportsSoccer" Color="Color.Success" Size="Size.Small" />
                                                            <span class="scorer-name">@goal.PlayerName</span>
                                                            <span class="scorer-minute">@goal.Minute'</span>
                                                        </div>
                                                    </MudListItem>
                                                }
                                            </MudList>
                                        }
                                        else
                                        {
                                            <MudText Typo="Typo.body2" Color="Color.Secondary">No goals recorded.</MudText>
                                        }
                                    </MudCardContent>
                                </MudCard>
                            </MudItem>

                            <MudItem xs="12" md="6">
                                <MudCard Class="match-stats-card">
                                    <MudCardHeader>
                                        <CardHeaderContent>
                                            <MudText Typo="Typo.h6">Match Statistics</MudText>
                                        </CardHeaderContent>
                                    </MudCardHeader>
                                    <MudCardContent>
                                        <div class="stat-row">
                                            <span>Final Score</span>
                                            <strong>@match.HomeScore - @match.AwayScore</strong>
                                        </div>
                                        <MudDivider Class="my-2" />
                                        <div class="stat-row">
                                            <span>Match Duration</span>
                                            <strong>90 minutes</strong>
                                        </div>
                                        <MudDivider Class="my-2" />
                                        <div class="stat-row">
                                            <span>Total Goals</span>
                                            <strong>@(match.HomeScore + match.AwayScore)</strong>
                                        </div>
                                    </MudCardContent>
                                </MudCard>
                            </MudItem>
                        </MudGrid>
                    </MudCardContent>
                </MudCard>
            }

            <!-- Back Button -->
            <div class="mt-6 text-center">
                <MudButton
                    Variant="Variant.Outlined"
                    Color="Color.Primary"
                    StartIcon="@Icons.Material.Filled.ArrowBack"
                    Href="/">
                    Back to Tournament
                </MudButton>
            </div>
        }
    </MudContainer>
</div>

