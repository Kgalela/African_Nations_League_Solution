@page "/tourment"

@inject NavigationManager Navigation

<style>
    /* Premium Tournament Bracket - Enterprise Grade Styling */

    :root {
        --bg-primary: #050810;
        --bg-secondary: #0f1419;
        --bg-tertiary: #1a2332;
        --bg-hover: #242f3f;
        --border-primary: #2d3b52;
        --border-subtle: #1a2332;
        --text-primary: #ffffff;
        --text-secondary: #a0aac0;
        --text-tertiary: #64748b;
        --accent-cyan: #00d9ff;
        --accent-blue: #3b82f6;
        --accent-gold: #fbbf24;
        --accent-success: #10b981;
        --accent-warning: #f59e0b;
        --accent-error: #ef4444;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        background: linear-gradient(to bottom, var(--bg-primary) 0%, var(--bg-secondary) 100%);
        color: var(--text-primary);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .tournament-container {
        padding: 2.5rem 2rem;
        max-width: 1440px;
        margin: 0 auto;
    }

    /* Header Section */
    .tournament-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .tournament-title {
        font-size: 2.75rem !important;
        font-weight: 800 !important;
        color: var(--accent-cyan) !important;
        margin-bottom: 0.75rem !important;
        letter-spacing: -0.02em;
        line-height: 1.2;
    }

    .tournament-subtitle {
        font-size: 1.05rem;
        color: var(--text-secondary);
        font-weight: 400;
        margin-bottom: 2rem !important;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1.25rem;
        justify-content: center;
        flex-wrap: wrap;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .action-buttons button {
            padding: 1rem 1.75rem !important;
            border-radius: 8px !important;
            font-weight: 700 !important;
            font-size: 0.85rem !important;
            text-transform: uppercase !important;
            letter-spacing: 0.06em !important;
            transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) !important;
            border: 2px solid transparent !important;
            min-height: 44px;
        }

    /* Bracket Container */
    .unified-bracket-container {
        background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 12px;
        padding: 3rem;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

        .unified-bracket-container:hover {
            border-color: rgba(0, 217, 255, 0.2);
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.05), 0 8px 24px rgba(0, 217, 255, 0.08);
        }

    .bracket-grid {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        grid-template-rows: auto auto;
        gap: 3rem;
        grid-template-areas:
            "quarter-left center quarter-right"
            "semi-left center-spacer semi-right";
    }

    .quarter-left {
        grid-area: quarter-left;
    }

    .bracket-center {
        grid-area: center;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 2rem;
        grid-row: 1 / 3;
    }

    .quarter-right {
        grid-area: quarter-right;
    }

    .semi-left {
        grid-area: semi-left;
        padding-top: 2rem;
        border-top: 1px solid rgba(51, 65, 85, 0.3);
    }

    .bracket-center-spacer {
        grid-area: center-spacer;
        min-width: 200px;
    }

    .semi-right {
        grid-area: semi-right;
        padding-top: 2rem;
        border-top: 1px solid rgba(51, 65, 85, 0.3);
    }

    .bracket-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .section-title {
        color: var(--text-tertiary) !important;
        font-size: 0.75rem !important;
        font-weight: 800 !important;
        letter-spacing: 0.15em !important;
        text-transform: uppercase !important;
        margin-bottom: 1rem !important;
    }

    .matches-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Match Cards */
    .match-card {
        background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 10px;
        padding: 1.75rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        cursor: pointer;
    }

        .match-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--accent-blue) 50%, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .match-card:hover {
            transform: translateY(-6px);
            border-color: var(--accent-blue);
            box-shadow: 0 12px 32px rgba(59, 130, 246, 0.15);
        }

            .match-card:hover::before {
                opacity: 1;
            }

        .match-card.completed {
            border-color: rgba(16, 185, 129, 0.3);
        }

            .match-card.completed:hover {
                border-color: var(--accent-success);
                box-shadow: 0 12px 32px rgba(16, 185, 129, 0.15);
            }

    .team-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
    }

        .team-row:first-child {
            padding-top: 0;
        }

        .team-row:not(:last-of-type) {
            border-bottom: 1px solid rgba(51, 65, 85, 0.3);
            padding-bottom: 1rem;
        }

        .team-row:last-of-type {
            padding-bottom: 0;
        }

    .team-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex: 1;
    }

    .team-flag {
        width: 32px;
        height: 24px;
        border-radius: 5px;
        object-fit: cover;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        border: 1px solid var(--border-primary);
    }

    .country-code {
        background: rgba(0, 217, 255, 0.15);
        color: var(--accent-cyan);
        padding: 0.5rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 800;
        min-width: 3rem;
        text-align: center;
        letter-spacing: 0.08em;
        border: 1px solid rgba(0, 217, 255, 0.2);
        flex-shrink: 0;
    }

        .country-code.unknown {
            background: rgba(139, 146, 168, 0.1);
            color: var(--text-secondary);
            border-color: rgba(139, 146, 168, 0.2);
        }

    .team-name {
        font-size: 1.05rem;
        font-weight: 700;
        color: var(--text-primary);
        letter-spacing: -0.01em;
    }

    .score {
        font-size: 2rem;
        font-weight: 900;
        color: var(--accent-cyan);
        min-width: 3rem;
        text-align: right;
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .match-card.pending .score {
        color: var(--text-tertiary);
        font-size: 1.5rem;
    }

    .match-status {
        position: absolute;
        top: 0.875rem;
        right: 0.875rem;
        font-size: 0.65rem;
        font-weight: 800;
        padding: 0.5rem 0.875rem;
        border-radius: 6px;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border: 1px solid;
    }

    .completed-badge {
        background-color: rgba(16, 185, 129, 0.15);
        color: #4ade80;
        border-color: rgba(16, 185, 129, 0.3);
    }

    .pending-badge {
        background-color: rgba(59, 130, 246, 0.15);
        color: #60a5fa;
        border-color: rgba(59, 130, 246, 0.3);
    }

    /* Trophy Section */
    .trophy-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        padding: 2.5rem;
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.03) 100%);
        border-radius: 12px;
        border: 2px solid rgba(245, 158, 11, 0.2);
        min-width: 280px;
    }

    .trophy-icon {
        font-size: 5rem;
        filter: drop-shadow(0 8px 20px rgba(245, 158, 11, 0.4));
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-16px);
    }

    }

    .final-text {
        color: var(--accent-gold) !important;
        font-weight: 800 !important;
        font-size: 1.75rem !important;
        letter-spacing: 0.12em !important;
        text-transform: uppercase !important;
    }

    .tbd-text {
        color: var(--text-secondary);
        font-size: 0.875rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    /* Top Scorers Section */
    .top-scorers-container {
        padding: 3rem 2rem;
        max-width: 1440px;
        margin: 0 auto;
    }

    .top-scorers-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .top-scorers-title {
        color: var(--accent-cyan) !important;
        font-weight: 800 !important;
        font-size: 2.5rem !important;
        letter-spacing: -0.02em !important;
        margin: 0 !important;
    }

    .view-all-btn {
        border: 2px solid var(--accent-cyan) !important;
        color: var(--accent-cyan) !important;
        font-weight: 800 !important;
        padding: 0.875rem 2rem !important;
        border-radius: 8px !important;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) !important;
        text-transform: uppercase !important;
        font-size: 0.85rem !important;
        letter-spacing: 0.06em !important;
        background-color: transparent !important;
    }

        .view-all-btn:hover {
            background-color: var(--accent-cyan) !important;
            color: var(--bg-primary) !important;
            transform: translateY(-3px);
            box-shadow: 0 12px 32px rgba(0, 217, 255, 0.3) !important;
        }

    .scorers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    .scorer-card {
        background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
        border: 1px solid var(--border-primary);
        border-radius: 10px;
        padding: 2rem;
        display: flex;
        align-items: center;
        gap: 1.75rem;
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        cursor: pointer;
    }

        .scorer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--accent-cyan) 50%, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
            margin-left: 0;
        }

        .scorer-card:hover {
            transform: translateY(-8px);
            border-color: var(--accent-cyan);
            box-shadow: 0 12px 32px rgba(0, 217, 255, 0.15);
        }

    .rank-number {
        font-size: 3.5rem;
        font-weight: 900;
        color: var(--accent-gold);
        line-height: 1;
        min-width: 4rem;
        text-align: center;
        letter-spacing: -0.02em;
    }

    .scorer-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .player-name {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--text-primary);
        line-height: 1.2;
        letter-spacing: -0.01em;
    }

    .player-country {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.875rem;
    }

    .country-code-small {
        background: rgba(0, 217, 255, 0.15);
        color: var(--accent-cyan);
        padding: 0.375rem 0.625rem;
        border-radius: 5px;
        font-size: 0.75rem;
        font-weight: 800;
        letter-spacing: 0.08em;
        border: 1px solid rgba(0, 217, 255, 0.2);
    }

    .country-name {
        color: var(--text-secondary);
        font-weight: 600;
    }

    .goals-count {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-direction: column;
    }

    .goals-number {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--accent-gold);
        line-height: 1;
        letter-spacing: -0.02em;
    }

    .soccer-ball {
        font-size: 1.75rem;
        filter: drop-shadow(0 2px 8px rgba(245, 158, 11, 0.4));
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .bracket-grid

    {
        grid-template-columns: 1fr;
        gap: 2rem;
        grid-template-areas:
            "center"
            "quarter-left"
            "quarter-right"
            "semi-left"
            "semi-right";
    }

    .bracket-center {
        grid-row: auto;
        padding: 0;
    }

    .bracket-center-spacer {
        display: none;
    }

    .semi-left,
    .semi-right {
        border-top: none;
        padding-top: 0;
    }

    .unified-bracket-container {
        padding: 2rem;
    }

    }

    @@media (max-width: 768px) {
        .tournament-container, .top-scorers-container

    {
        padding: 1.5rem 1rem;
    }

    .tournament-title {
        font-size: 2rem !important;
    }

    .top-scorers-title {
        font-size: 2rem !important;
    }

    .tournament-subtitle {
        font-size: 1rem;
    }

    .scorers-grid {
        grid-template-columns: 1fr;
    }

    .trophy-icon {
        font-size: 4rem;
    }

    .final-text {
        font-size: 1.5rem !important;
    }

    .action-buttons {
        flex-direction: column;
        gap: 0.75rem;
    }

        .action-buttons button {
            width: 100%;
        }

    .unified-bracket-container {
        padding: 1.5rem;
    }

    .match-card {
        padding: 1.25rem;
    }

    .team-info {
        gap: 0.75rem;
    }

    .scorer-card {
        gap: 1.25rem;
        padding: 1.5rem;
    }

    .rank-number {
        font-size: 2.5rem;
        min-width: 3rem;
    }

    .goals-number {
        font-size: 1.75rem;
    }

    }

    @@media (max-width: 480px) {
        .tournament-title

    {
        font-size: 1.5rem !important;
    }

    .top-scorers-title {
        font-size: 1.5rem !important;
    }

    .tournament-header {
        margin-bottom: 2rem;
    }

    .bracket-grid {
        gap: 1.5rem;
    }

    .trophy-section {
        min-width: auto;
        width: 100%;
    }

    .scorers-grid {
        gap: 1rem;
    }

    .match-card {
        padding: 1rem;
    }

    .team-row {
        padding: 0.75rem 0;
    }

    .score {
        font-size: 1.5rem;
    }

    .scorer-card {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .scorer-info {
        gap: 0.5rem;
        width: 100%;
    }

    .rank-number {
        font-size: 2rem;
    }

    }
</style>


<MudContainer>
    <div class="unified-bracket-container">
        <div class="bracket-grid">
            <!-- Quarter Finals Left -->
            <div class="bracket-section quarter-left">
                <MudText Typo="Typo.overline" Class="section-title">Quarter Finals</MudText>
                <div class="matches-group">
                    @foreach (var match in quarterFinals.Take(quarterFinals.Count / 2))
                    {
                        <div class="match-card @(match.IsPlayed ? "completed" : "pending")">
                            <div class="match-status @(match.IsPlayed ? "completed-badge" : "pending-badge")">
                                @(match.IsPlayed ? "Completed" : "Pending")
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.HomeCountry?.FlagUrl" class="team-flag" alt="@match.HomeCountry?.Name" />
                                    <span class="country-code">@match.HomeCountry?.Code</span>
                                    <span class="team-name">@match.HomeCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.HomeScore : "-")</span>
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.AwayCountry?.FlagUrl" class="team-flag" alt="@match.AwayCountry?.Name" />
                                    <span class="country-code">@match.AwayCountry?.Code</span>
                                    <span class="team-name">@match.AwayCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.AwayScore : "-")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Center Final -->
            <div class="bracket-center">
                <div class="trophy-section">
                    <div class="trophy-icon">🏆</div>
                    <MudText Typo="Typo.h5" Class="final-text">Final</MudText>

                    @if (finalMatch != null)
                    {
                        <div class="matches-group" style="width: 100%; margin-top: 1rem;">
                            <div class="match-card @(finalMatch.IsPlayed ? "completed" : "pending")">
                                <div class="match-status @(finalMatch.IsPlayed ? "completed-badge" : "pending-badge")">
                                    @(finalMatch.IsPlayed ? "Completed" : "Pending")
                                </div>

                                <div class="team-row">
                                    <div class="team-info">
                                        <img src="@finalMatch.HomeCountry?.FlagUrl" class="team-flag" alt="@finalMatch.HomeCountry?.Name" />
                                        <span class="country-code">@finalMatch.HomeCountry?.Code</span>
                                        <span class="team-name">@finalMatch.HomeCountry?.Name</span>
                                    </div>
                                    <span class="score">@(finalMatch.IsPlayed ? finalMatch.HomeScore : "-")</span>
                                </div>

                                <div class="team-row">
                                    <div class="team-info">
                                        <img src="@finalMatch.AwayCountry?.FlagUrl" class="team-flag" alt="@finalMatch.AwayCountry?.Name" />
                                        <span class="country-code">@finalMatch.AwayCountry?.Code</span>
                                        <span class="team-name">@finalMatch.AwayCountry?.Name</span>
                                    </div>
                                    <span class="score">@(finalMatch.IsPlayed ? finalMatch.AwayScore : "-")</span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <MudText Typo="Typo.body2" Class="tbd-text">To Be Determined</MudText>
                    }
                </div>
            </div>

            <!-- Quarter Finals Right -->
            <div class="bracket-section quarter-right">
                <MudText Typo="Typo.overline" Class="section-title">Quarter Finals</MudText>
                <div class="matches-group">
                    @foreach (var match in quarterFinals.Skip(quarterFinals.Count / 2))
                    {
                        <div class="match-card @(match.IsPlayed ? "completed" : "pending")">
                            <div class="match-status @(match.IsPlayed ? "completed-badge" : "pending-badge")">
                                @(match.IsPlayed ? "Completed" : "Pending")
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.HomeCountry?.FlagUrl" class="team-flag" alt="@match.HomeCountry?.Name" />
                                    <span class="country-code">@match.HomeCountry?.Code</span>
                                    <span class="team-name">@match.HomeCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.HomeScore : "-")</span>
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.AwayCountry?.FlagUrl" class="team-flag" alt="@match.AwayCountry?.Name" />
                                    <span class="country-code">@match.AwayCountry?.Code</span>
                                    <span class="team-name">@match.AwayCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.AwayScore : "-")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Semi Finals Left -->
            <div class="bracket-section semi-left">
                <MudText Typo="Typo.overline" Class="section-title">Semi Finals</MudText>
                <div class="matches-group">
                    @foreach (var match in semiFinals.Take(semiFinals.Count / 2))
                    {
                        <div class="match-card @(match.IsPlayed ? "completed" : "pending")">
                            <div class="match-status @(match.IsPlayed ? "completed-badge" : "pending-badge")">
                                @(match.IsPlayed ? "Completed" : "Pending")
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.HomeCountry?.FlagUrl" class="team-flag" alt="@match.HomeCountry?.Name" />
                                    <span class="country-code">@match.HomeCountry?.Code</span>
                                    <span class="team-name">@match.HomeCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.HomeScore : "-")</span>
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.AwayCountry?.FlagUrl" class="team-flag" alt="@match.AwayCountry?.Name" />
                                    <span class="country-code">@match.AwayCountry?.Code</span>
                                    <span class="team-name">@match.AwayCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.AwayScore : "-")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="bracket-center-spacer"></div>

            <!-- Semi Finals Right -->
            <div class="bracket-section semi-right">
                <MudText Typo="Typo.overline" Class="section-title">Semi Finals</MudText>
                <div class="matches-group">
                    @foreach (var match in semiFinals.Skip(semiFinals.Count / 2))
                    {
                        <div class="match-card @(match.IsPlayed ? "completed" : "pending")">
                            <div class="match-status @(match.IsPlayed ? "completed-badge" : "pending-badge")">
                                @(match.IsPlayed ? "Completed" : "Pending")
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.HomeCountry?.FlagUrl" class="team-flag" alt="@match.AwayCountry?.Name" />
                                    <span class="country-code">@match.HomeCountry?.Code</span>
                                    <span class="team-name">@match.HomeCountry?.Name</span>
                                </div>
                                <span class="score">@(match.IsPlayed ? match.HomeScore : "-")</span>
                            </div>

                            <div class="team-row">
                                <div class="team-info">
                                    <img src="@match.AwayCountry?.FlagUrl" class="team-flag" alt="@match.AwayCountry?.Name" />
